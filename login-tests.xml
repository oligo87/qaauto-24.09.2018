<suite name="All login tests.">

    <test name="positive">
        <classes>
            <class name="test.LoginTest">
                <methods>
                    <include name="successfulLoginTest" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="negative">
        <classes>
            <class name="test.LoginTest">
                <methods>
                    <include name="negativeLoginWithEmptyFieldsTest" />
                    <include name="validationMessagesOnInvalidEmailPasswordTest" />
                </methods>
            </class>
        </classes>
    </test>

</suite>